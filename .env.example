# Frontend Configuration
PUBLIC_API_URL=http://localhost:3001
PUBLIC_APP_URL=http://localhost:5173

# Backend Configuration (apps/api/.env)
DATABASE_URL=postgresql://postgres:password@localhost:5432/trademaster
PORT=3001
JWT_SECRET=your-jwt-secret-here-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here-min-32-chars
CORS_ORIGINS=http://localhost:5173

# AI Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# S3 Storage Configuration (Cloudflare R2 in production, MinIO in dev)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=trademaster-media
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=auto
S3_PUBLIC_URL=http://localhost:9000/trademaster-media

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:3001/api/v1/auth/google/callback
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_REDIRECT_URL=http://localhost:3001/api/v1/auth/apple/callback

# Email Configuration (for password resets)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@trademaster.ai
